<Page x:Class="CoontrolBuisnesTile.Pages.StartWorkPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CoontrolBuisnesTile.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartWorkPage">

    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Начать работу" HorizontalAlignment="Center" VerticalAlignment="Center"
                   x:Name="tbStart"
                   FontSize="24"/>

        <Button Style="{DynamicResource ButtonStyle1}" x:Name="btnStart"
                Click="btnStart_Click"
                Grid.Row="1"
                Margin="180 80"
                    Background="#96BB7C"
                    Content="Начать"
                />
    </Grid>
</Page>
