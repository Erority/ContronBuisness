<Page x:Class="CoontrolBuisnesTile.Pages.SalaryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CoontrolBuisnesTile.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SalaryPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        
        <TextBlock Text="Рассчет зп за текущий месяц" HorizontalAlignment="Center" VerticalAlignment="Center"
                   x:Name="tbStart"
                   FontSize="24"/>


        <TextBlock Text="" HorizontalAlignment="Center" VerticalAlignment="Center"
                   x:Name="tbSalary"
                   Grid.Row="1"
                   FontSize="24"/>



        <Button Style="{DynamicResource ButtonStyle1}" 
                Margin="240 40"
                x:Name="btnCalc"
                Click="btnCalc_Click"
                Grid.Row="7"
                Background="#96BB7C"
                Content="Расчитать за тек.месяц"
                />
    </Grid>
</Page>
